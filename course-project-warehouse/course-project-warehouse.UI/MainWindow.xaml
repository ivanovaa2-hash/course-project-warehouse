<Window x:Class="course_project_warehouse.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система учёта складских товаров"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Фильтры и заголовок -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопки -->
        </Grid.RowDefinitions>

        <!-- === Заголовок и фильтры === -->
        <Border Grid.Row="0" Background="White" Padding="15" CornerRadius="8" Margin="0,0,0,15" 
                BorderBrush="#DDD" BorderThickness="1" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Grid.Row="0" Text="Список товаров на складе" 
                           FontSize="26" FontWeight="SemiBold" 
                           Foreground="#333" HorizontalAlignment="Left"/>

                <!-- Фильтры -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,15,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#555"/>
                    <TextBox x:Name="SearchTextBox" Width="200" Height="32" 
                             TextChanged="SearchTextBox_TextChanged"
                             Padding="8,0"/>

                    <TextBlock Text="Категория:" VerticalAlignment="Center" Margin="30,0,10,0" Foreground="#555"/>
                    <ComboBox x:Name="CategoryFilterComboBox" Width="200" Height="32" 
                              SelectionChanged="CategoryFilterComboBox_SelectionChanged"
                              IsEditable="False">
                        <ComboBoxItem Content="Все категории"/>
                        <ComboBoxItem Content="Процессоры"/>
                        <ComboBoxItem Content="Видеокарты"/>
                        <ComboBoxItem Content="Оперативная память"/>
                        <ComboBoxItem Content="Материнские платы"/>
                        <ComboBoxItem Content="Жёсткие диски / SSD"/>
                        <ComboBoxItem Content="Корпуса"/>
                        <ComboBoxItem Content="Блоки питания"/>
                        <ComboBoxItem Content="Кулеры / системы охлаждения"/>
                        <ComboBoxItem Content="Другое"/>
                    </ComboBox>

                    <TextBlock Text="Производитель:" VerticalAlignment="Center" Margin="30,0,10,0" Foreground="#555"/>
                    <TextBox x:Name="ManufacturerFilterTextBox" Width="200" Height="32" 
                             TextChanged="SearchTextBox_TextChanged"
                             Padding="8,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- === DataGrid === -->
        <DataGrid x:Name="ProductsDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  Background="White"
                  RowBackground="White"
                  AlternatingRowBackground="#F8F9FA"
                  BorderBrush="#DDD"
                  BorderThickness="1"
                  Margin="0,0,0,20"
                  MouseDoubleClick="ProductsDataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80" FontWeight="SemiBold"/>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="220"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="160"/>
                <DataGridTextColumn Header="Производитель" Binding="{Binding Manufacturer}" Width="150"/>
                <DataGridTextColumn Header="Модель / Артикул" Binding="{Binding Model}" Width="150"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="110"/>
                <DataGridTextColumn Header="Мин. запас" Binding="{Binding MinStock}" Width="110"/>
                <DataGridTextColumn Header="Цена закупки" Binding="{Binding PurchasePrice, StringFormat={}{0:C2}}" Width="130"/>
                <DataGridTextColumn Header="Цена продажи" Binding="{Binding SalePrice, StringFormat={}{0:C2}}" Width="130"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- === Панель кнопок === -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Добавить товар" Click="AddProduct_Click" Width="160" Height="45" Margin="10"/>
            <Button Content="Редактировать" Click="EditProduct_Click" Width="140" Height="45" Margin="10"/>
            <Button Content="Удалить" Click="DeleteProduct_Click" Width="130" Height="45" Margin="10"/>
            <Button Content="Добавить поставку" Click="AddShipment_Click" Width="170" Height="45" Margin="10"/>
            <Button Content="Отчёты" Click="ReportsButton_Click" Width="130" Height="45" Margin="10"/>
            <Button Content="Оплаты" Click="PaymentsButton_Click" Width="130" Height="45" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>