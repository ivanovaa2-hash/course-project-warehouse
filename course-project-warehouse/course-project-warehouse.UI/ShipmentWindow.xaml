<Window x:Class="course_project_warehouse.UI.ShipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Добавление поставки"
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Заголовок накладной -->
            <RowDefinition Height="*"/>
            <!-- Таблица товаров -->
            <RowDefinition Height="Auto"/>
            <!-- Панель управления таблицей -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопки действий -->
        </Grid.RowDefinitions>

        <!-- Секция заголовка накладной -->
        <GroupBox Grid.Row="0" Header="Заголовок накладной" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Поставщик:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="SupplierComboBox" Grid.Row="0" Grid.Column="1" 
                          DisplayMemberPath="Name" SelectedValuePath="Id"
                          Margin="0,0,0,0" Height="30"/>

                <TextBlock Text="Дата поступления:" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="20,0,10,0"/>
                <DatePicker x:Name="ShipmentDatePicker" Grid.Row="0" Grid.Column="3" 
                            Margin="0,0,0,0" Height="30"/>

                <TextBlock Text="Номер документа:" Grid.Row="0" Grid.Column="4" VerticalAlignment="Center" Margin="20,0,10,0"/>
                <TextBox x:Name="DocumentNumberTextBox" Grid.Row="0" Grid.Column="5" 
                         Margin="0,0,0,0" Height="30"/>
            </Grid>
        </GroupBox>

        <!-- Секция таблицы товаров -->
        <GroupBox Grid.Row="1" Header="Товары" Margin="0,0,0,15">
            <DataGrid x:Name="ItemsDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      Margin="5">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Товар" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding Products}"
                                          DisplayMemberPath="Name"
                                          SelectedValue="{Binding ProductId}"
                                          SelectedValuePath="Id"
                                          Height="25"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Количество" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                                         PreviewTextInput="NumberValidationTextBox"
                                         Height="25"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Цена за единицу" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding UnitPrice, StringFormat=F2, UpdateSourceTrigger=PropertyChanged}"
                                         PreviewTextInput="DecimalValidationTextBox"
                                         Height="25"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Сумма" Width="120" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TotalCost, StringFormat=F2}"
                                         Background="LightGray"
                                         Padding="5"
                                         VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Действия" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Удалить" 
                                        Click="DeleteItemButton_Click"
                                        Height="25" Width="70"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Панель управления таблицей -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,15">
            <Button Content="Добавить строку"
                    Click="AddItemButton_Click"
                    Width="120" Height="30"/>
        </StackPanel>

        <!-- Кнопки действий -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Сохранить"
                    Click="SaveButton_Click"
                    Width="120" Height="35" Margin="10"/>
            <Button Content="Отмена"
                    Click="CancelButton_Click"
                    Width="120" Height="35" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>